        </Grid>
        <Grid Grid.Column="1" MaxWidth="200" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Right"
                        >
                <StackPanel.Background>
                    <SolidColorBrush Color="WhiteSmoke" Opacity="0.6"></SolidColorBrush>
                </StackPanel.Background>

                <Label Margin="5" FontSize="18" HorizontalContentAlignment="Center" Background="Beige">LOGIN</Label>
                <ComboBox  VerticalAlignment="Top" Margin="10" Background="Azure" ></ComboBox>
                <PasswordBox Margin="10,0,10,10"></PasswordBox>
                <Button  Margin="10,0,10,0" Width="150" Height="25">ACCEPT
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Name="Start">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                             To="175" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                             To="35" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <EventTrigger.Actions>
                                <RemoveStoryboard BeginStoryboardName="Start"
                            />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Row="1" MaxWidth="200" HorizontalAlignment="Right" >
                <StackPanel.Background>
                    <SolidColorBrush Color="WhiteSmoke" Opacity="0.6"></SolidColorBrush></StackPanel.Background>
                
                <ComboBox  VerticalAlignment="Top" Margin="10" Background="Azure" ></ComboBox>
                <Button Opacity="1"  Margin="10,40,10,10" Width="150" Height="25">FIND
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Name="Start1">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                             To="175" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                             To="35" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <EventTrigger.Actions>
                                <RemoveStoryboard BeginStoryboardName="Start1"
                            />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <Button  Margin="10,10,10,10" Width="150" Height="25" Click="OpenConstruct">ADD
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Name="Start2">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                             To="175" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                             To="35" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <EventTrigger.Actions>
                                <RemoveStoryboard BeginStoryboardName="Start2"
                            />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
                <Button  Margin="10,10,10,10" Width="150" Height="25" Click="OpenNewMarker">NewMarker
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Name="start3">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                             To="175" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                                             To="35" Duration="0:0:0.4" RepeatBehavior="2x" AutoReverse="True"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <EventTrigger.Actions>
                                <RemoveStoryboard BeginStoryboardName="start3"
                            />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
